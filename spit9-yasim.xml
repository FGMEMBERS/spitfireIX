<?xml version="1.0"?>

<!--
************************************************************************
YASim aerodynamic model for a Spitfire Mk IX

************************************************************************
-->

<!-- Weight of everything but fuel  -->
<airplane mass="5090">

<!-- Approach configuration -->
<approach speed="72" aoa="9">
  <control-setting axis="/controls/engines/engine[0]/throttle" value="0.3"/>
  <control-setting axis="/controls/engines/engine[0]/mixture" value="0.6"/>
  <control-setting axis="/controls/engines/engine[0]/propeller-pitch" value="0.1"/>
  <control-setting axis="/controls/flight/flaps" value="1.0"/>
  <control-setting axis="/controls/gear/gear-down" value="1"/>
</approach>

<!-- Cruise configuration -->
<cruise speed="260" alt="22000">
  <control-setting axis="/controls/engines/engine[0]/throttle" value="1.00"/>
  <control-setting axis="/controls/engines/engine[0]/mixture" value="1.00"/>
  <control-setting axis="/controls/engines/engine[0]/propeller-pitch" value="1.0"/>
  <control-setting axis="/controls/engines/engine[0]/boost" value="1.0"/>
  <control-setting axis="/controls/flight/flaps" value="0.0"/>
  <control-setting axis="/controls/gear/gear-down" value="0"/>
</cruise>

<!-- pilot's eyepoint -->
<cockpit x="-3.695" y="0" z="0.6"/>

<fuselage ax="-0.5" ay="0.0" az="0.2" bx="-8.7" by="0.0" bz="0.2"
          width="0.8" taper="0.68"/>

<!-- inner wing -->
<wing x="-3.644" y="0.422" z="-0.517" taper="0.877" incidence="2.0"
      length="2.366" chord="2.48" sweep="-1.7" dihedral="5" camber="0.05">
  <stall aoa="12" width="8" peak="2.0"/>
  <flap0 start="0.0" end="1.0" lift="1.5" drag="1.8"/>
  <control-input axis="/controls/flight/flaps" control="FLAP0"/>
  <control-output control="FLAP0" prop="/surface-positions/flap-pos-norm"/>
  <control-speed control="FLAP0" transition-time="5"/>
</wing>

<!-- outer wing -->
<mstab x="-3.584" y="2.788" z="-0.333" taper="0.445" incidence="2.0" twist="0.5" effectiveness = "1.0"
      length="1.845" chord="2.176" sweep="-2.0" dihedral="5" camber="0.05" >
  <stall aoa="12" width="9" peak="2.0"/>
  <flap0 start="0.0" end="1.0" lift="1.4" drag="1.2"/>
  <control-input axis="/controls/flight/aileron" control="FLAP0" split="true"/>
  <control-input axis="/controls/flight/aileron-trim" control="FLAP0" split="true"/>
	<control-input axis="/controls/flight/aileron-effectiveness" control="FLAP0EFFECTIVENESS" 
	src0="0" src1="1" dst0="0" dst1="1"/>
</mstab>

<!-- normal wingtip -->
<mstab x="-3.441" y="4.632" z="-0.166" taper="0.1" incidence="-0.0"
      length="0.992" chord="1.431" sweep="-1.7" dihedral="5" camber="0.1">
  <stall aoa="12" width="8" peak="1.5"/>
</mstab>

<!-- elevator -->
<hstab x="-8.785" y="0.34" z="0.414" taper="0.8" incidence="2.0"
       length="1.4" chord="1.3" sweep="3">
  <stall aoa="17" width="8.5" peak="1.5"/>
  <flap0 start="0.0" end="1.0" lift="1.5" drag="2.0"/>
  <control-input axis="/controls/flight/elevator" control="FLAP0"/>
  <control-input axis="/controls/flight/elevator-trim" control="FLAP0"/>
  <control-output control="FLAP0" prop="/surface-positions/elevator-pos-norm"/>
	<control-input axis="/controls/flight/elevator-effectiveness" control="FLAP0EFFECTIVENESS" 
	src0="0" src1="1" dst0="0" dst1="1"/>
</hstab>

<!-- rudder -->
<vstab x="-9.0" y="0" z="-0.6" taper="0.8" 
       length="1.8" chord="1.164" sweep="5">
  <stall aoa="15" width="4" peak="1.5"/> 
  <flap0 start="0" end="1" lift="1.5" drag="2.4"/>
  <control-input axis="/controls/flight/rudder"  control="FLAP0" invert="true"/>
  <control-input axis="/controls/flight/rudder-trim" control="FLAP0" invert="true"/>
  <control-output control="FLAP0" prop="/surface-positions/rudder-pos-norm"
    min="1" max="-1"/>
	<control-input axis="/engines/engine[0]/thrust-lbs" control="FLAP0EFFECTIVENESS" 
		src0="400" src1="2300" dst0="0" dst1="1"/>
</vstab>


<propeller   x="-2.0" y="0" z="-0.2"
           radius="1.75" 
           mass="1575" moment="74.5"
           cruise-alt="10800" cruise-power="1050"
           cruise-speed="260" cruise-rpm="1257"
           gear-ratio="0.479"
           min-rpm="862" max-rpm="1437" >
  <actionpt x="-0.85" y="0" z="0.126"/>
  <control-input axis="/controls/engines/engine[0]/propeller-pitch" control="ADVANCE" />
  <piston-engine
    eng-power="1695" eng-rpm="3000"
    turbo-mul="2" wastegate-mp="61"
    >
    <control-input axis="/controls/engines/engine[0]/throttle" control="THROTTLE"/>
    <control-input axis="/controls/engines/engine[0]/starter" control="STARTER"/>
    <control-input axis="/controls/engines/engine[0]/magnetos" control="MAGNETOS"/>
    <control-input axis="/controls/engines/engine[0]/mixture" control="MIXTURE"/>
    <control-input axis="/controls/engines/engine[0]/boost" control="BOOST"/>
  </piston-engine>

</propeller>

-->
 <!-- left main -->
<gear x="-2.921" y="1.0" z="-1.754" compression="0.15" spring="0.2" damp="12.3" 
	dfric="0.55" sfric="0.5"
>
  <control-input axis="/controls/gear/brake-left" control="BRAKE"/>
  <control-input axis="/controls/gear/brake-parking" control="BRAKE" split="true"/>
  <control-input axis="/controls/gear/gear-down" control="EXTEND"/>
  <control-speed control="EXTEND" transition-time="6"/>
  <control-output control="EXTEND" prop="/gear/gear[0]/position-norm"/>
</gear>

 <!-- right main -->
<gear x="-2.921" y="-1.0" z="-1.754" compression="0.15" spring="0.2" damp="12.3"
	dfric="0.55" sfric="0.5"
>
  <control-input axis="/controls/gear/brake-right" control="BRAKE"/>
  <control-input axis="/controls/gear/brake-parking" control="BRAKE" split="true"/>
  <control-input axis="/controls/gear/gear-down" control="EXTEND"/>
  <control-speed control="EXTEND" transition-time="4"/>
  <control-output control="EXTEND" prop="/gear/gear[1]/position-norm"/>
</gear>
<!-- Tail wheel -->

<gear x="-8.978" y="0" z="-0.434" compression="0.2" castering="1" dfric="0.5" sfric="0.8"
>
  <control-input axis="/controls/gear/tailwheel-lock" control="CASTERING" 
 	src0="0" src1="1"
    dst0="1" dst1="0"/>
</gear>
 
<tank x="-3.40" y="0" z="0.25" capacity="705"/> 

<!-- pilot -->
<ballast x="-4.5" y="0" z="0.5" mass="180"/>

<ballast x="-8.5" y="0" z="0.5" mass="-400"/>

<ballast x="-3.3" y="1.3" z="0.4" mass="-200"/>
<ballast x="-3.3" y="-1.3" z="0.4" mass="-200"/>
</airplane>
